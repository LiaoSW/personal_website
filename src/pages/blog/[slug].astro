---
// 中文博客文章页面 - 使用统一的博客文章组件
import BlogPostPage from '../../components/pages/BlogPostPage.astro'
import { generateBlogPostPaths } from '../../lib/blogUtils'
import { render } from 'astro:content'

export async function getStaticPaths() {
    return await generateBlogPostPaths('zh');
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<BlogPostPage post={post} Content={Content} />
