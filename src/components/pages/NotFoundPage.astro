---
// 404页面组件 - 统一处理中英文版本
import Layout from '../../layouts/Layout.astro'
import { getCurrentLang, useTranslations, getLocalizedPath } from '../../i18n/utils'

// 动态获取当前语言
const currentLang = getCurrentLang(Astro);
const t = useTranslations(currentLang);

// 获取本地化的首页链接
const homeLink = getLocalizedPath('/', currentLang);
---

<Layout title={t('error.404.title')} description={t('error.404.description')}>
  <div class="min-h-[70vh] flex flex-col items-center justify-center text-center">
    <!-- 404大标题 -->
    <h1 class="text-9xl font-black text-base-content mb-4">404</h1>
    
    <!-- 错误标题 -->
    <h2 class="text-4xl font-bold text-base-content mb-8">
      {t('error.404.title')}
    </h2>
    
    <!-- 错误描述 -->
    <p class="text-lg text-base-content/80 mb-8 max-w-md">
      {t('error.404.description')}
    </p>
    
    <!-- 操作按钮 -->
    <div class="flex gap-4 flex-wrap justify-center">
      <a
        href={homeLink}
        class="btn btn-primary text-primary-content"
      >
        {t('error.404.back_home')}
      </a>
      <button
        class="btn btn-outline btn-accent"
        onclick="history.back()"
      >
        {t('common.back')}
      </button>
    </div>
    
    <!-- 装饰性图标 -->
    <div class="mt-12 text-6xl opacity-20">
      🔍
    </div>
  </div>
</Layout>

<style>
  /* 添加一些动画效果 */
  h1 {
    animation: bounce 2s infinite;
  }
  
  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }
</style>
