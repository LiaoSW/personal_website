---
import { Image } from 'astro:assets'
import { getLangFromUrl, useTranslations } from '../../i18n/utils'

import SocialIcons from './SocialIcons.astro'

const currentLang = getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);

const {fullName, title, institute, profilePicture, description} = Astro.props
---
<div class='flex-1'>
  <h1 class='text-4xl font-bold mb-4'>
    {t('home.welcome')} <span class='text-secondary'>{fullName}</span>
  </h1>
  <p class='text-xl text-gray-600 mb-4'>{title}{institute ? ` at ${institute}` : ''}</p>
  <p class='text-lg mb-6'>
    {description}
  </p>
  <div class='flex gap-4'>
    <SocialIcons />
  </div>
</div>
<div class='size-72 lg:block hidden'>
  <!-- Add your profile image -->
  <Image
    src={profilePicture}
    alt={fullName}
    class='w-full h-full mask mask-circle size-44'
  />
</div>
